# ═══════════════════════════════════════════════════════
#  Pablo AI Agent v3.0 — Environment Variables
#  Copy to .env and fill in your values
# ═══════════════════════════════════════════════════════

# ── AI Providers (at least one required) ─────────────────
GROQ_API_KEY=your_groq_api_key_here           # Free — console.groq.com
GEMINI_API_KEY=                               # Optional fallback — aistudio.google.com
ANTHROPIC_API_KEY=                            # Optional premium — console.anthropic.com

# ── Telegram (required for Telegram mode) ────────────────
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHANNEL_ID=@your_channel_or_-1001234567890

# ── Twitter / X (required for Twitter mode) ──────────────
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_token_secret
TWITTER_ENABLE_MENTIONS=false                 # true = reply to mentions (needs Basic+ tier)

# ── Optional Skill Enhancements ───────────────────────────
SERPER_API_KEY=                               # Better Google search — serper.dev
NEWSAPI_KEY=                                  # Real-time news — newsapi.org
OPENWEATHER_KEY=                              # Better weather — openweathermap.org

# ── Scheduling ────────────────────────────────────────────
TWEET_INTERVAL_HOURS=2
CHANNEL_INTERVAL_HOURS=2

# ── Logging ───────────────────────────────────────────────
LOG_LEVEL=INFO                                # DEBUG | INFO | WARN | ERROR
